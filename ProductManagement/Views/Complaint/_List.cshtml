@model Tuple<ProductManagement.Models.Complaint, ProductManagement.Models.Complaint_type, ProductManagement.Models.Product>
<div class="row">
    <div class="col-md-5">
        <a class="btn @Session["btn"]" href="/Complaint/Add">
            Ajout
        </a>
    </div>

</div>
<div class="card">
    <div class="card-header datadesign @Session["datatable"]">
        <h4 class="card-title">Gestion des réclamation</h4>
        <p class="card-category">Liste des réclamation</p>
    </div>
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead style="text-align: center;">
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>State</th>
                    <th>Produit</th>
                    <th>Date de création</th>
                    <th>Action</th>
                </tr>
            </thead>

        </table>

    </div>
    <h4 style="color: red; margin-left: 400px;">@ViewBag.msg</h4>
</div>
<script>
    function Delete(id) {
        $("#confirm").modal('show');
        $("#btnconfirm").click(function () {
            $.ajax({
                url: '/Complaint/Delete',
                data: { "id": id },
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html',
                success: function (result) {

                    $('#List').html(result);
                    $('#example').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                },
                "columnDefs": [
                    { "width": "1%", "targets": 0 },
                    { "width": "10%", "targets": 1 },
                    { "width": "5%", "targets": 2 }
                ],
                processing: true,
                serverSide: true,
                searchable: true,
                ajax: {
                    url: '@Url.Action("Get", "Complaint")',
                    type: 'POST',
                    dataSrc: 'data',
                },
                            columns: [
                                { data: "Id" },
                                { data: "Title" },
                                { data: "Description" },
                                { data: "Desctype" },
                                { data: "Descstate" },
                                { data: "Product" },
                                {
                                    data: "Creation_date", mRender: function (data) {
                                        var pattern = /Date\(([^)]+)\)/;
                                        var results = pattern.exec(data);
                                        var dt = new Date(parseFloat(results[1]));
                                        var day;
                                        var mounth;
                                        if (dt.getDate() < 10) {
                                            day = "0" + dt.getDate();
                                        }
                                        else {
                                            day = dt.getDate();
                                        }
                                        if (dt.getMonth() < 9) {
                                            mounth = "0" + (dt.getMonth() + 1);
                                        }
                                        else {
                                            mounth = (dt.getMonth() + 1);
                                        }
                                        return (day) + "/" + (mounth) + "/" + dt.getFullYear();
                                    }
                                },
                                {
                                    data: "Id",
                                    mRender: function (data, type, full) {
                                        return '<a id="modif" href="#" onclick="Detail(' + data + ')" style="font-size:13px">Modifier</a>  |  '
                                            + '<a id="modif" href="#" onclick="Delete(' + data + ')" style="font-size:13px">Supprimer</a>'
                                    }
                                }

                            ]

            }
        );
                    $("#confirm").modal('hide');
                },
                error: function (result) {
                    alert('fail');
                }
            })
        });
    }
    function Detail(id) {
        $.ajax({
            url: '/Complaint/Detail',
            data: { "id": id },
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#detail').html(result);
                $('#modaldetail').modal('show');
            },
            error: function (result) {
                alert('fail');
            }
        })
    }
</script>
