@model Tuple<ProductManagement.Models.Product, ProductManagement.Models.Type>
<div class="row">
    <div class="col-md-5">
        <a class="btn btn-primary" href="/Product/Addproduct">
            Ajout
        </a>
    </div>
    <div class="col-md-7">
        <h4 style="color:red">@ViewBag.msg</h4>
    </div>
</div>


<div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Gestion des produits</h4>
            <p class="card-category">Liste de produit</p>
        </div>
        <div class="card-body">
            <div class="col-md-12">

                <table id="example" class="table table-striped table-bordered" style="width:100%; max-width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Référence</th>
                            <th>Nom</th>
                            <th><div style="width:200px">Description</div> </th>
                            <th>Date de fabrication</th>
                            <th>Type</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
            </div>
        </div>

<script>
        $(document).ready(function () {
            $('#example').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                },
                "columnDefs": [
                    { "width": "1%", "targets": 0 },
                    { "width": "10%", "targets": 1 },
                    { "width": "5%", "targets": 2 }
                ],
                processing: true,
                serverSide: true,
                searchable: true,
                ajax: {
                    url: '@Url.Action("GetProducts")',
                    type: 'POST',
                    dataSrc: 'data',
                },
                columns: [
                    { data: "Id" },
                    { data: "Reference" },
                    { data: "Name" },
                    { data: "Desc" },
                    {
                        data: "Datefab", mRender: function (data) {
                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(data);
                            var dt = new Date(parseFloat(results[1]));
                            var day;
                            var mounth;
                            if (dt.getDate() < 10) {
                                day = "0" + dt.getDate();
                            }
                            else {
                                day = dt.getDate();
                            }
                            if (dt.getMonth() < 10) {
                                mounth = "0" + (dt.getMonth() + 1);
                            }
                            else {
                                mounth = (dt.getMonth()+1);
                            }
                            return (day) + "/" + (mounth) + "/" + dt.getFullYear();
                        }
                    },
                    { data: "Desctype" },
                    { data: "Price" },
                    { data: "Qt" },
                    {
                        data: "Id",
                        mRender: function (data, type, full) {
                            return '<a id="modif" href="#" onclick="Detail('+ data +')" style="font-size:13px">Modifier</a>  |  '
                                + '<a id="modif" href="#" onclick="Delete(' + data + ')" style="font-size:13px">Supprimer</a>'
                        }}

                ]

            }
        );
        });
</script>
    <script>

        function Delete(id) {
            $("#confirm").modal('show');
            $("#btnconfirm").click(function () {
                $.ajax({
                    url: '/Product/Deletepdt',
                    data: { "id": id },
                    contentType: 'application/html; charset=utf-8',
                    type: 'GET',
                    dataType: 'html',
                    success: function (result) {

                        $('#Listpdt').html(result);
                        $("#confirm").modal('hide');
                    },
                    error: function (result) {
                        alert('Tu ne peux pas supprimer ce produit');
                    }
                })
            });
        }
        function Detail(id) {
            $.ajax({
                url: '/Product/Detailpdt',
                data: { "id": id },
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html',
                success: function (result) {
                    $('#detailpdt').html(result);
                    $('#modaldetail').modal('show');
                },
                error: function (result) {
                    alert('fail');
                }
            })
        }
    </script>

