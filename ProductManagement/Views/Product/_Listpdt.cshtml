@model Tuple<ProductManagement.Models.Product, ProductManagement.Models.Type>
<div class="row">
    <div class="col-md-5">
        <a class="btn btn-primary" href="/Product/Addproduct">
            Ajout
        </a>
    </div>
    <div class="col-md-7">
        <h4 style="color:red">@ViewBag.msg</h4>
    </div>
</div>


<div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Gestion des produits</h4>
            <p class="card-category">Liste de produit</p>
        </div>
        <div class="card-body">
            <div class="col-md-12">

                <table id="example" class="table table-striped table-bordered" style="width:100%; max-width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Référence</th>
                            <th>Nom</th>
                            <th><div style="width:200px">Description</div> </th>
                            <th>Date de fabrication</th>
                            <th>Type</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var pdt in ViewBag.Listpdt)
                        {
                            <tr>
                                <td>@pdt.Id</td>
                                <td>@pdt.Reference</td>
                                <td>@pdt.Name</td>
                                <td><div style="width:200px">@pdt.Desc</div></td>
                                <td>@pdt.Datefab</td>
                                <td>@pdt.Desctype</td>
                                <td>@pdt.Price</td>
                                <td>@pdt.Qt</td>
                                <td>
                                    <a id="modif" href="#" onclick="Detail(@pdt.Id)">Modifier</a> | <a id="delete1" onclick="Delete(@pdt.Id)" href="#">Supprimer</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
        </div>

    <script>
        $(document).ready(function () {
            $('#example').DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    },
                    "columnDefs": [
                        { "width": "30%", "targets": 3 }
                    ],
                }
            );
        });
    </script>
    <script>

        function Delete(id) {
            $("#confirm").modal('show');
            $("#btnconfirm").click(function () {
                $.ajax({
                    url: '/Product/Deletepdt',
                    data: { "id": id },
                    contentType: 'application/html; charset=utf-8',
                    type: 'GET',
                    dataType: 'html',
                    success: function (result) {

                        $('#Listpdt').html(result);
                        $("#confirm").modal('hide');
                    },
                    error: function (result) {
                        alert('Tu ne peux pas supprimer ce produit');
                    }
                })
            });
        }
        function Detail(id) {
            $.ajax({
                url: '/Product/Detailpdt',
                data: { "id": id },
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html',
                success: function (result) {
                    $('#detailpdt').html(result);
                    $('#modaldetail').modal('show');
                },
                error: function (result) {
                    //$('#detailpdt').html(result);
                    alert('fail');
                }
            })
        }
    </script>

