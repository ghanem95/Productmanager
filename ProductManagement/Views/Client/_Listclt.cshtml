@model ProductManagement.Models.Client
<div class="row">
    <div class="col-md-5">
        <a class="btn btn-primary" href="/Client/AddClt">
            Ajout
        </a>
    </div>
    <div class="col-md-7">
        <h4 style="color:red">@ViewBag.msg</h4>
    </div>
</div>
<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Gestion des clients</h4>
        <p class="card-category">Liste des clients</p>
    </div>
    <div class="card-body">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Date de naissance</th>
                    <th>Adresse</th>
                    @*<th>Cité</th>
                        <th>Pays</th>*@
                    <th>Code postal</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Profession</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var clt in ViewBag.ListClient)
                {
                    <tr>
                        <td>@clt.Id</td>
                        <td>@clt.Firstname</td>
                        <td>@clt.Lastname</td>
                        <td>@clt.Birthdate</td>
                        <td>@clt.Adresse</td>
                        @*<td>@clt.Cite</td>
                            <td>@clt.Countrie</td>*@
                        <td>@clt.Codep</td>
                        <td>@clt.Email</td>
                        <td>@clt.Tel</td>
                        <td>@clt.Prof</td>
                        <td>
                            <a id="modif" href="#" onclick="Detail(@clt.Id)">Modifier</a> | <a id="delete" onclick="Delete(@clt.Id)" href="#">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
<script>
    function Delete(id) {
        $("#confirm").modal('show');
        $("#btnconfirm").click(function () {
            $.ajax({
                url: '/Client/DeleteClt',
                data: { "idclt": id },
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html',
                success: function (result) {

                    $('#Listclt').html(result);
                    $('#example').DataTable(
                        {
                            "language": {
                                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                            }
                        }
                    );
                    $("#confirm").modal('hide');
                },
                error: function (result) {
                    alert('fail');
                }
            })
        });
    }
    function Detail(id) {
        $.ajax({
            url: '/Client/DetailClt',
            data: { "idclt": id },
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#detailsclt').html(result);
                $('#modaldetail').modal('show');
            },
            error: function (result) {
                alert('fail');
            }
        })
    }
</script>
